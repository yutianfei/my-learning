<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#ff4E5054"
                android:centerY="0.75"
                android:endColor="#ff4E5054"
                android:startColor="#ff4E5054" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="#801AB7A5"
                    android:centerY="0.75"
                    android:endColor="#a01EAE1E"
                    android:startColor="#8018BCEE" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="#8000ff00"
                    android:startColor="#8019BBEE" />
            </shape>
        </clip>
    </item>

</layer-list>  
